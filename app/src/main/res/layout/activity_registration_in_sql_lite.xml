<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabhat.raj.AppActivity.RegistrationInSqlLite">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="@drawable/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/choose_image_galary"
        android:src="@drawable/galary_icon"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="65dp"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <EditText
        android:id="@+id/user_name_sql"
        android:layout_below="@+id/profile_image"
        android:hint="Enter user name"
        android:layout_marginTop="25dp"
        android:padding="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/user_address_sql"
        android:layout_below="@+id/user_name_sql"
        android:hint="Enter user Address"
        android:padding="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_choose_gender"
        android:layout_below="@+id/user_address_sql"
        android:padding="13dp"
        android:textColor="#000000"
        android:text="Choose your gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/gender_linear_layout"
        android:layout_below="@+id/tv_choose_gender"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rg_gender"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:id="@+id/rb_male"
                android:text="Male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginRight="50dp"
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@+id/gender_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textColor="#23000f"
        android:background="@drawable/custom_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
