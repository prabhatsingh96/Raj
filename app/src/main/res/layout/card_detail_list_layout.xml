<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:editable="false"
        android:id="@+id/et_card_number_list"
        android:layout_below="@+id/tv_card_detail"
        android:layout_marginTop="10dp"

        android:padding="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/rl_date_layout_list"
        android:layout_below="@+id/et_card_number_list"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:editable="false"
            android:id="@+id/et_months_list"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:editable="false"
            android:id="@+id/et_year_list"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

            <RadioButton
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:id="@+id/radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
